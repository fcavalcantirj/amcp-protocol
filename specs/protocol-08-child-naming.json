{
  "id": "protocol-08-child-naming",
  "title": "Child Agent Naming Convention",
  "status": "draft",
  "version": "0.1.0",
  "created": "2026-02-14",
  "author": "ClaudiusThePirateEmperor",
  
  "summary": "Defines mandatory naming convention for child agent Solvr registration",
  
  "rule": {
    "pattern": "{PARENT_SOLVR_NAME}_child_{INSTANCE_NAME}",
    "examples": [
      "ClaudiusThePirateEmperor_child_dana",
      "ClaudiusThePirateEmperor_child_jack",
      "AgentPhil_child_research_bot"
    ]
  },
  
  "variables": {
    "PARENT_SOLVR_NAME": {
      "source": "Parent agent's Solvr account name",
      "how": "From parent's TOOLS.md or Solvr /me endpoint",
      "required": true
    },
    "INSTANCE_NAME": {
      "source": "Deployment instance name",
      "how": "From openclaw-deploy config or spawn command",
      "required": true,
      "constraints": [
        "lowercase",
        "alphanumeric + underscore only",
        "max 32 chars"
      ]
    }
  },
  
  "enforcement": {
    "when": "Child agent Solvr registration",
    "who": "proactive-amcp skill (spawn-child.sh)",
    "validation": "Reject registration if name doesn't match pattern"
  },
  
  "rationale": [
    "Clear lineage tracking (parent â†’ child)",
    "Searchable hierarchy (find all children of X)",
    "Human-readable (not UUIDs)",
    "No hardcoded names (fully dynamic)"
  ],
  
  "api": {
    "endpoint": "POST https://api.solvr.dev/v1/agents/register",
    "body": {
      "name": "{PARENT_SOLVR_NAME}_child_{INSTANCE_NAME}"
    }
  }
}
