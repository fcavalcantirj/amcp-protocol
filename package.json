{
  "name": "amcp-protocol",
  "version": "0.2.2",
  "description": "Agent Memory Continuity Protocol - Cryptographic identity and verifiable memory for AI agents",
  "type": "module",
  "bin": {
    "amcp": "./scripts/amcp"
  },
  "files": [
    "scripts/amcp",
    "scripts/amcp-cli.mjs"
  ],
  "scripts": {
    "build:cli": "esbuild scripts/amcp-cli.ts --bundle --platform=node --format=esm --outfile=scripts/amcp-cli.mjs --target=node22",
    "prepublishOnly": "npm run build:cli",
    "build": "pnpm -r --workspace-concurrency=1 build",
    "build:core": "pnpm --filter @amcp/core build",
    "build:memory": "pnpm --filter @amcp/memory build",
    "build:recovery": "pnpm --filter @amcp/recovery build",
    "build:exchange": "pnpm --filter @amcp/exchange build",
    "test": "pnpm -r test",
    "test:cli": "vitest run --config test/cli/vitest.config.ts test/cli/",
    "test:e2e": "vitest run --config test/e2e/vitest.config.ts",
    "test:core": "pnpm --filter @amcp/core test",
    "test:memory": "pnpm --filter @amcp/memory test",
    "test:recovery": "pnpm --filter @amcp/recovery test",
    "test:exchange": "pnpm --filter @amcp/exchange test",
    "lint": "eslint packages/*/src",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r exec tsc --noEmit"
  },
  "keywords": [
    "ai-agents",
    "cryptographic-identity",
    "keri",
    "ucan",
    "ipld",
    "agent-memory",
    "verifiable-credentials"
  ],
  "author": "ClaudiusThePirateEmperor & Felipe Cavalcanti",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fcavalcantirj/amcp-protocol.git"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.27.3",
    "vitest": "^1.6.1"
  },
  "dependencies": {}
}
